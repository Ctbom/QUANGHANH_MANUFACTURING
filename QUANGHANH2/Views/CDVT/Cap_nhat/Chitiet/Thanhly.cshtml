@{
    ViewData["Title"] = "thanh-li";
    if (Session["departID"].ToString().Contains("PX"))
    {
        Layout = "~/Views/Shared/_Layout_PhanXuong.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout_CDVT.cshtml";
    }
}

<!-- This page CSS -->
<link href="~/dist/css/pages/data-table.css" rel="stylesheet">
<link href="~/assets/sweetalert/sweetalert2.min.css" rel="stylesheet" />
<link href="~/assets/Custom css/CDVT/TABLE_BORDERED.css" rel="stylesheet" />
<link href="~/lib/datepicker_src/dist/css/datepicker.min.css" rel="stylesheet" type="text/css">
<link href="~/lib/datepicker_src/dist/css/datepicker.min.css " rel="stylesheet " type="text/css ">
<link href="~/lib/datepicker_src/dist/css/custom.css " rel="stylesheet " type="text/css ">
<link href="~/lib/datepicker_src/dist/css/font.css" rel="stylesheet" type="text/css">
<script src="~/lib/datepicker_src/dist/js/datepicker.js"></script>
<script src="~/lib/datepicker_src/dist/js/i18n/datepicker.vi.js"></script>

<div class="card">
    <div class="card-content">
        <div class="row">
            <h3 class="center">Chi tiết quyết định thanh lý số @ViewBag.code</h3>
            <div class="col s12 table_container">
                <table class="table-bordered striped table-responsive centered"
                       style="margin-top:30px; text-align:center;" id="complex_header">
                    <thead>
                        <tr>
                            <th>Mã thiết bị</th>
                            <th>Tên thiết bị</th>
                            <th>Bên mua</th>
                            <th>Danh sách vật tư đi kèm</th>
                            <th>Đã thanh lý</th>
                        </tr>
                    </thead>
                </table>
                <input name="id" hidden value="@ViewBag.id" id="id" />
                <a class="btn blue darken-2" id="submit">Lưu</a>
            </div>
        </div>
    </div>
</div>

<div class="modal" id="mylist">
    <div class="modal-content">
        <div class="modal-header">
            <h3 class="modal-title" id="listId">Danh sách vật tư đi kèm</h3>
        </div>
        <div class="modal-body">
            <div class="row">
                <table id="test" class="striped table-responsive centered table-bordered mytable">
                    <thead>
                        <tr>
                            <th>Mã vật tư</th>
                            <th>Tên vật tư</th>
                            <th>Số lượng</th>
                            <th>Chất lượng</th>
                            <th>Đã thu hồi</th>
                        </tr>
                    </thead>
                </table>
            </div>
            <input type="hidden" id="dsvattu" disabled />
            <input type="hidden" id="mathietbi" disabled />
            <input type="hidden" id="maquyetdinh" disabled />
        </div>
        <div class="modal-footer">
            <a id="submitvattu" class="waves-effect waves-light btn blue darken-2 modal-trigger">Lưu</a>
            <button type="button" class="btn light-blue lighten-1 modal-close" id="exit-add-button">Thoát</button>
        </div>
    </div>
</div>

<link href="~/css/transfer_mobilize_history_timeline.css" rel="stylesheet" />
<script src="~/js/Briefs_List.js"></script>
<link href="~/assets/Custom css/form-input-border.css" rel="stylesheet" />
<script>
    $("#complex_header").on("click", ".buttonChon", function () {
        if ($(this).text() == "Chưa nhận") {
            $(this).text('Đã nhận')
        }
        else {
            $(this).text('Chưa nhận')
        }
    });

    var listvattu = ""
    function modify_qty(vattu) {
        if (!listvattu.includes($(vattu).val())) {
            listvattu += $(vattu).val() + "^";
            $(vattu).removeClass("darken-2");
            $(vattu).text("Đã nhận")
        }
        else {
            listvattu = listvattu.replace(($(vattu).val() + "^"), "")
            $(vattu).addClass("darken-2")
            $(vattu).text("Chưa nhận")
        }
        $("#dsvattu").val(listvattu)
    }
</script>

@section scripts{
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script src="~/js/jquery.dataTables.min.js"></script>
    <script src="~/assets/sweetalert/sweetalert2.min.js"></script>
    <script src="~/assets/sweetalert/sweetalert2.all.min.js"></script>
    <script src="~/assets/sweetalert/alert-quanghanh-js.js"></script>
    <script>
        var Popup, dataTable;
        $('#pre-load').show();
        dataTable = $('#complex_header').dataTable({
            "language": {
                "emptyTable": "Không tìm thấy dữ liệu",
                "info": "Đang hiện _START_ đến _END_ của _TOTAL_ bản ghi",
                "infoEmpty": "Đang hiện 0 đến 0 của 0 bản ghi",
                "paginate": {
                    "first": "Trang đầu",
                    "last": "Trang cuối",
                    "next": "Trang sau",
                    "previous": "Trang trước"
                }
            },
            "ajax": {
                "url": "/phong-cdvt/cap-nhat/quyet-dinh/thanh-ly/GetData",
                "type": "POST",
                "datatype": "json",
                "data": {
                    "id": $('#id').val()
                },
                "cache": false
            },
            "columns": [
                { "data": "equipmentId", "name": "equipmentId" },
                { "data": "equipment_name", "name": "equipment_name" },
                { "data": "buyer", "name": "buyer" },
                {
                    "data": "idAndEquip", "name": "person_created", "render": function (data) {
                        return "<a data-list=\"" + data + "\" class=\"waves-effect waves-light btn-small blue modal-trigger open-Modal\" href=\"#mylist\">Vật tư đi kèm</a>";
                    }
                },
                {
                    "data": "statusAndEquip", "name": "person_created", "render": function (data) {
                        if (data.split("^")[0] == "0") return "<button id=\"buttonChon\" class='btn blue darken-2 buttonChon' value=\"" + data.split("^")[1] + "\">Chưa nhận</button>";
                        else return "<button disabled class=\"btn blue darken-2\">Đã nhận</button>"
                    }
                }
            ],
            "serverSide": "true",
            "order": [0, "asc"],
            "rowId": "incident_id",
            "lengthChange": false,
            "searching": false,
            "initComplete": function (settings, json) {
                $('#pre-load').hide();
            },
            "columnDefs": [
                { targets: 3, orderable: false },
                { targets: 4, orderable: false }
            ],
            "preDrawCallback": function (settings) {
                $('#pre-load').show();
            },
            "drawCallback": function (settings) {
                $('#pre-load').hide();
            }
        });
        var table = $('#complex_header').DataTable();
        $("#submit").click(function (e) {
            var equipments = "";
            for (var i = 0; i < $('#complex_header tbody tr').length; i++) {
                if ($('#complex_header tbody tr:nth-child(' + (i + 1) + ') button').text() == "Đã nhận")
                    equipments += $('#complex_header tbody tr:nth-child(' + (i + 1) + ') button').val() + "^"
            }
            $("#pre-load").show();
            $.ajax({
                type: "POST",
                url: "/phong-cdvt/cap-nhat/quyet-dinh/thanh-ly/edit",
                dataType: "json",
                success: function (data) {
                    if (data.success == true) {
                        window.location.reload(true);
                    }
                    else {
                        errorAlert('Lỗi', data.message);
                    }
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {
                    $('#pre-load').hide();
                    errorAlert('Lỗi');
                },
                data: {
                    id: $('#id').val(),
                    edit: equipments
                },
                cache: false
            })
            return false;
        });
        var table = $('#complex_header').DataTable();
        $("#submitvattu").click(function (e) {
            $("#pre-load").show();
            $.ajax({
                type: "POST",
                url: "/phong-cdvt/cap-nhat/quyet-dinh/EditSupplyStatus",
                dataType: "json",
                success: function (data) {
                    if (data.success == true) {
                        successAlert(data.message, '');
                        table.ajax.reload(function () {

                        });
                        $('#dsvattu').val("");
                        listvattu = "";
                        $('#exit-button').click()
                        $('#pre-load').hide();
                    }
                    else {
                        errorAlert('Lỗi', data.message);
                    }

                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {
                    $('#pre-load').hide();
                    errorAlert('Lỗi');
                },
                data: {
                    documentary_id: $('#maquyetdinh').val(),
                    equipmentId: $('#mathietbi').val(),
                    listSupplies: $('#dsvattu').val()
                },
                cache: false
            })
            return false;
        });

        //get data and push to modal list
        $(document).on("click", ".open-Modal", function () {
            $("#pre-load").show();
            $("#test").find("tr:gt(0)").remove();
            var QDIdAndEquipId = $(this).data('list');
            $('#listId').text("Danh sách vật tư đi kèm của thiết bị " + QDIdAndEquipId.split("^")[1])
            $("#mathietbi").val(QDIdAndEquipId.split("^")[1])
            $("#maquyetdinh").val(QDIdAndEquipId.split("^")[0])
            $.ajax({
                type: "POST",
                url: "/phong-cdvt/cap-nhat/quyet-dinh/GetSupply",
                dataType: "json",
                success: function (data) {
                    $(function () {
                        $.each(data, function (i, item) {
                            var $tr = $('<tr>').append(
                                $('<td>').text(item.supply_id),
                                $('<td>').text(item.supply_name),
                                $('<td>').text(item.quantity),
                                $('<td>').text(item.supplyStatus)
                            );
                            if (item.supply_documentary_status != 0)
                                $tr.append($('<td>').html("<button disabled class=\"btn blue darken-2 buttonVattu\">Đã nhận</button>"))
                            else
                                $tr.append($('<td>').html("<button id='temp' onclick=\"modify_qty(this)\" class=\"btn blue darken-2 buttonVattu\" value=\"" + item.supply_id + "\">Chưa nhận</button>"))
                            $tr.appendTo('#test');
                        });
                    });
                    $("#pre-load").hide();
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {
                    errorAlert('Lỗi');
                },
                data: {
                    documentary_id: QDIdAndEquipId.split("^")[0],
                    equipmentId: QDIdAndEquipId.split("^")[1]
                },
                cache: false
            })
        });
    </script>
}