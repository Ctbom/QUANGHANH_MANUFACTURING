@section scripts{
    <script src="~/js/Custom JS/CDVT/QuyetDinh/OptionValueToText.js"></script>
    <script>
        $(document).on("click", "#addcolumn", function () {
            var $tr = $('<tr>').append(
                $('<td>').html("<input list='supplyID' type='text' id='vattu' class='form-control td-id temp' />"),
                $('<td>'),
                $('<td>').text("0"),
                $('<td>').html("<input type='number' min='1' value='1' class='form-control' />"),
                $('<td>').html("<input type='number' min='0' value='0' class='form-control' />"),
                $('<td>').html("<input type='number' min='0' value='0' class='form-control' />"),
                $('<td>').html("<input type='text' class='form-control' />")
            );
            $tr.appendTo('#test tbody');
            myfunction2();
        })

        var Popup, dataTable;
        $('#pre-load').show();
        dataTable = $('#complex_header').DataTable({
            "language": {
                "emptyTable": "Không tìm thấy dữ liệu",
                "info": "Đang hiện _START_ đến _END_ của _TOTAL_ bản ghi",
                "infoEmpty": "Đang hiện 0 đến 0 của 0 bản ghi",
                "paginate": {
                    "first": "Trang đầu",
                    "last": "Trang cuối",
                    "next": "Trang sau",
                    "previous": "Trang trước"
                }
            },
            "ajax": {
                "url": "/phong-cdvt/cap-nhat/quyet-dinh/cai-tien/GetData",
                "type": "POST",
                "datatype": "json",
                "data": {
                    "id": $('#id').val()
                },
                "cache": false
            },
            "columns": [
                { "data": "equipmentId", "name": "equipmentId" },
                { "data": "equipment_name", "name": "equipment_name" },
                { "data": "department_name", "name": "department_name" },
                {
                    "data": {}, "name": "person_created", "render": function (data) {
                        return "<a data-documentary_id=" + data.documentary_id + " data-equipmentid=\"" + data.equipmentId + "\" class=\"waves-effect waves-light btn-small blue modal-trigger open-Modal\" href=\"#mylist\">TB đi kèm</a>";
                    }
                },
                {
                    "data": {}, "name": "person_created", "render": function (data) {
                        return "<a data-documentary_id=" + data.documentary_id + " data-equipmentid=\"" + data.equipmentId + "\" class=\"waves-effect waves-light btn-small blue modal-trigger vattu\" href=\"#mylist2\">VT đi kèm</a>";
                    }
                },
                {
                    "data": "statusAndEquip", "name": "person_created", "render": function (data) {
                        if (data.split("^")[0] == "0") return "<button id=\"buttonChon\" class='btn blue darken-2 buttonChon' value=\"" + data.split("^")[1] + "\">Chưa xử lý</button>";
                        else return "<button disabled class=\"btn blue darken-2\">Đã xử lý</button>"
                    }
                }
            ],
            "serverSide": "true",
            "order": [0, "asc"],
            "rowId": "incident_id",
            "lengthChange": false,
            "searching": false,
            "initComplete": function (settings, json) {
                $('#pre-load').hide();
            },
            "columnDefs": [
                { targets: 3, orderable: false },
                { targets: 4, orderable: false }
            ],
            "preDrawCallback": function (settings) {
                $('#pre-load').show();
            },
            "drawCallback": function (settings) {
                $('#pre-load').hide();
            }
        });

        $("#submit").click(function (e) {
            var equipments = "";
            for (var i = 0; i < $('#complex_header tbody tr').length; i++) {
                if ($('#complex_header tbody tr:nth-child(' + (i + 1) + ') button').text() == "Đã xử lý")
                    equipments += $('#complex_header tbody tr:nth-child(' + (i + 1) + ') button').val() + "^"
            }
            if (equipments == "")
                return false;
            $("#pre-load").show();
            $.ajax({
                type: "POST",
                url: "/phong-cdvt/cap-nhat/quyet-dinh/cai-tien/edit",
                dataType: "json",
                success: function (data) {
                    if (data.success == true) {
                        dataTable.ajax.reload(function () {
                            $('#pre-load').hide();
                            successAlert(data.message);
                        });
                    }
                    else {
                        errorAlert(data.message);
                        $('#pre-load').hide();
                    }
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {
                    $('#pre-load').hide();
                    errorAlert('Lỗi');
                },
                data: {
                    id: $('#id').val(),
                    edit: equipments
                },
                cache: false
            })
        });

        $(document).on("click", ".submitvattu", function (e) {
            $("#pre-load").show();
            $.ajax({
                type: "POST",
                url: "/phong-cdvt/cap-nhat/quyet-dinh/cai-tien/update",
                dataType: "json",
                success: function (data) {
                    if (data.success) {
                        successAlert(data.message);
                        $('.exit-button').click()
                    }
                    else {
                        errorAlert(data.message);
                    }
                    $('#pre-load').hide();
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {
                    $('#pre-load').hide();
                    errorAlert('Lỗi');
                },
                data: {
                    list: function () { return getJsonArray(); },
                    documentary_id: documentary_id,
                    equipmentId: equipmentId,
                    IsSupply: IsSupply
                },
                cache: false
            })
        });

        //get data and push to modal list
        $(document).on("click", ".open-Modal", function () {
            $("#pre-load").show();
            $("#test").find("tr:gt(0)").remove();
            equipmentId = $(this).data('equipmentid');
            documentary_id = $(this).data('documentary_id');
            $('#mylist h3').text("Danh sách thiết bị con đi kèm của thiết bị " + equipmentId)
            IsSupply = false;
            $.ajax({
                type: "POST",
                url: "/phong-cdvt/cap-nhat/quyet-dinh/GetEquipAttached",
                dataType: "json",
                success: function (data) {
                    $.each(data, function (i, item) {
                        var $tr = $('<tr>').append(
                            $('<td>').html("<input readonly class='form-control' type='text' value='" + item.equipmentId_dikem + "' />"),
                            $('<td>').text(item.equipment_name),
                            $('<td>').text(item.quantity_plan),
                            $('<td>').html("<input class='form-control' type='number' min=0 max='" + item.quantity_plan + "' value='" + item.quantity_in + "' />"),
                        );
                        $tr.appendTo('#test tbody');
                    });
                    $("#pre-load").hide();
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {
                    errorAlert('Lỗi');
                },
                data: {
                    documentary_id: documentary_id,
                    equipmentId: equipmentId
                },
                cache: false
            })
        });

        //get data and push to modal list
        $(document).on("click", ".vattu", function () {
            $("#pre-load").show();
            $("#test2").find("tr:gt(0)").remove();
            equipmentId = $(this).data('equipmentid');
            documentary_id = $(this).data('documentary_id');
            $('#mylist2 h3').text("Danh sách vật tư đi kèm của thiết bị " + equipmentId)
            IsSupply = true;
            $.ajax({
                type: "POST",
                url: "/phong-cdvt/cap-nhat/quyet-dinh/GetSupply",
                dataType: "json",
                success: function (data) {
                    $.each(data, function (i, item) {
                        var $tr = $('<tr>').append(
                            $('<td>').html("<input readonly class='form-control' type='text' value='" + item.supply_id + "' />"),
                            $('<td>').text(item.supply_name),
                            $('<td>').text(item.quantity_plan),
                            $('<td>').html("<input class='form-control' type='number' min=0 max='" + item.quantity_plan + "' value='" + item.quantity_in + "' />"),
                        );
                        $tr.appendTo('#test2 tbody');
                    });
                    $("#pre-load").hide();
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {
                    errorAlert('Lỗi');
                },
                data: {
                    documentary_id: documentary_id,
                    equipmentId: equipmentId
                },
                cache: false
            })
        });
    </script>
}