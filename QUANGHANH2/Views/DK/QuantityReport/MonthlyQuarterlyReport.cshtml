<script>
    function getInformation() {
        $("#pre-load").show("slow", function () { });
        $.ajax({
            type: 'post',
            url: '/phong-dieu-khien/bao-cao-san-xuat-than/bao-cao-san-luong-toan-cong-ty-theo-thang-quy',
            data: {
                'years': $("#yearCalendar").val(),
            },
            success: function (response) {
                if (response.success == true) {
                    data = JSON.parse(response.data);
                    content = "";
                    tieuchiName = ["Jan", "JanKH", "JanPor", "Feb", "FebKH", "FebPor", "March", "MarchKH", "MarchPor", "April", "AprilKH", "AprilPor", "Q1", "Q1KH", "Q1Por", "May", "MayKH", "MayPor", "June", "JuneKH", "JunePor", "July",
                        "JulyKH", "JulyPor", "Aug", "AugKH", "AugPor", "Q2", "Q2KH", "Q2Por", "Sep", "SepKH", "SepPor", "Oct", "OctKH", "OctPor", "Nov", "NovKH", "NovPor", "Dec", "DecKH", "DecPor", "Q3", "Q3KH", "Q3Por", "totalYear", "firstPlan", "adjustedPlan", "totalYearPor"]
                    for (let index = 0; index < data.length; index++) {
                        content += "<tr>"
                        if (data[index]["isHeader"]) {
                            content += "<td colspan=\"49\"><b>" + data[index]["TenPhongBan"] + "</b></td>"
                        } else {
                            content += "<td>" + data[index]["TenNhomTieuChi"] + "</td>"
                        }
                        //
                        for (let i = 0; i < tieuchiName.length; i++) {
                            if (!data[index]["isHeader"]) {
                                if (data[index][tieuchiName[i]] != null) {
                                    content += "<td>" + data[index][tieuchiName[i]] + "</td>"
                                } else {
                                    if (tieuchiName[i] != "GhiChu") {
                                        content += "<td>" + 0 + "</td>"
                                    } else {
                                        content += "<td></td>"
                                    }
                                }
                            }
                        }
                        content += "</tr>"
                    }
                    $("#reportTable").children("tbody").html(content);
                }
                if (response.success == false) {
                    //errorAlert("", response.mess);
                    $("#modal_tbody").empty();
                    data = JSON.parse(response.thieu);
                    content = "";
                    for (var i = 0; i < data.length; i++) {
                        content += "<tr>";
                        content += "<td>" + data[i]["department_name"] + "</td>";
                        content += "<td>" + data[i]["TenNhomTieuChi"] + "</td>";
                        content += "</tr>";
                    }
                    $("#thieu_table").children("tbody").html(content);
                    $("#showmodal").click();
                }
                $("#pre-load").hide("slow", function () { });
            },
            error: function (response) {
            }
        })
    }
</script>
<script>
    function moveScroll() {
        var scroll = $(window).scrollTop();
        var anchor_top = $("#reportTable").offset().top;
        var anchor_bottom = $("#bottom_anchor").offset().top;
        if (scroll > anchor_top && scroll < anchor_bottom) {
            clone_table = $("#clone");
            if (clone_table.length == 0) {
                clone_table = $("#reportTable").clone();
                clone_table.attr('id', 'clone');
                clone_table.css({
                    position: 'fixed',
                    'pointer-events': 'none',
                    top: 0
                });
                clone_table.width($("#reportTable").width() + 2);
                $("#table-container").append(clone_table);
                $("#clone thead").css({ visibility: 'visible' });
                $("#clone tbody").css({ visibility: 'hidden' });
            }
        } else {
            $("#clone").remove();
        }
    }
    $(window).scroll(moveScroll);
    $(window).resize(function () {
        $("#clone").width($("#reportTable").width() + 2);
    })
</script>
