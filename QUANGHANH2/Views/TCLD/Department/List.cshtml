
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout_TCLD.cshtml";
}

<link href="~/assets/Custom css/TCLD/Certificate/Certificate.css" rel="stylesheet" />
<link href="~/lib/mutiple select/slimselect.css" rel="stylesheet" />
<div class="user-roll card" id="vld-antoan">
    <div class="card-content">
        <div class="row">
            <h3 class="black-text"><b>QUẢN LÝ PHÒNG BAN</b></h3>
            <div class="centered">
                <div class="row" id="tab_searching">
                    <div id="searchDiplomaEmployee">
                        <div class="input-group mb-3">
                            <div class="col s13 m13 l3 input-field">
                                <input class="form-control" placeholder="Mã phòng ban" id="maPhongBanTxt" />
                            </div>
                            <div class="col s13 m13 l3 input-field">
                                <input class="form-control" placeholder="Tên phòng ban" id="tenPhongBanTxt" />
                            </div>
                            <div class="col s13 m13 l3 input-field">
                                <input class="form-control" placeholder="Loại" id="loaiTxt" />
                            </div>
                            <div class="col l2 m12 s12 input-field">
                                <button class="waves-effect waves-light btn-small blue darken-2 modal-trigger" type="submit" id="searchEmpBtn">Tìm kiếm</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <hr />
        <!---->
        <div id="diploma">
            <div class="row">
                <div class="card">
                    <div class="card-content">
                        <div class="row">
                            <a class="btn btn-small blue darken-2 modal-trigger btn-mg input-field" data-target="addDepartment">Thêm phòng ban </a>

                        </div>
                        <div class="table-responsive">
                            <table id="table_department" class="table table-bordered  centered highlight">
                                <thead>
                                    <tr>
                                        <th>Mã phòng ban</th>
                                        <th>Tên phòng ban</th>
                                        <th>Loại</th>
                                        <th colspan="2">Thao tác</th>

                                    </tr>
                                </thead>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="addDepartment" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h3 class="modal-title">Thêm phòng ban</h3>
        </div>
        <div class="modal-body">
            @Html.Action("AddDepartment", "Department")
        </div>
    </div>
</div>

<script src="~/js/Custom JS/TCLD/Certificate/certificate.js"></script>
<script src="~/js/Custom JS/form-input-border.js"></script>
<script src="~/lib/mutiple select/slimselect.js"></script>
<script src="~/Scripts/notify.min.js"></script>
<link href="~/css/preloader/css.css" rel="stylesheet" />
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
@section scripts {
    <script>
        $("#pre-load").show("slow", function () {
        });
        $("#pre-load").css("z-index", "99999");
        var dataTableDepartment;
        var searchId;
        var isSearchCertificate = true;
        var current_index;
        $(document).ready(function () {
            // Diploma
            dataTableDepartment = $("#table_department")
                .on('preXhr.dt', function (e, settings, data) {
                    $("#pre-load").show("slow", function () {
                    });
                    $("#pre-load").css("z-index", "99999");
                })
                .DataTable({
                "ajax": {
                    "url": "/phong-tcld/quan-ly-phong-ban",
                    "type": "POST",
                    "datatype": "json",

                    },
                    "drawCallback": function (settings) {
                        $("#pre-load").hide("slow", function () {
                        });
                    },
                "columns": [
                    { "data": "department_id", "name": "department_id", "defaultContent": ""},
                    { "data": "department_name", "name": "department_name", "defaultContent": ""},
                    { "data": "department_type", "name": "department_type" },
                    {
                        "data": "department_id", "render": function (data) {
                            return "<a class='waves-effect waves-light btn-small blue darken-2 modal-trigger' data-target='editDiploma' style='margin-left:5px' onclick=getEditIdDiploma(" + data + ") ><i class='far fa-edit'></i>Sửa</a>";
                    },
                    "orderable": false,
                    "searchable": false,
                    },
                    {
                        "data": "department_id", "render": function (data) {
                            return "<a class='waves-effect waves-light btn-small red modal-trigger'  style='margin-left:5px' onclick=getDeleteIdDiploma(" + data + ") ><i class='fa fa-trash'></i> Xóa</a>";
                    },
                    "orderable": false,
                    "searchable": false,
                },

                ],
                "language": {
                    emptyTable: "<li class='text-danger' align='center'>Không có dữ liệu</li>",
                    paginate:
                    {
                        previous: "Trang trước",
                        next: "Trang sau",
                        first: "|<",
                        last: ">|",

                    },
                    info: "Đang hiện START đến END của TOTAL bản ghi",
                    infoEmpty: "Đang hiện 0 đến 0 của 0 bản ghi",
                },
                "autoWidth": false,
                "serverSide": "true",
                "order": [0, "asc"],
                "bLengthChange": false,
                "bFilter": false,
                "bInfo": false,
                "initComplete": function (settings, json) {
                        $("#pre-load").hide("slow", function () {
                        });

                    }
                });

        });


            function SubmitFormDiploma(form) {
            $.validator.unobtrusive.parse(form);
            if ($(form).valid()) {
                $("#pre-load").show("slow", function () {
                });
                $("#pre-load").css("z-index", "99999");
                $.ajax({
                    type: "POST",
                    url: form.action,
                    data: $(form).serialize(),
                    success: function (data) {
                        dataTableDiploma.ajax.reload();
                        dataDiplomaEmp.ajax.reload();
                        $("#pre-load").hide("slow", function () {
                        });
                        successAlert('Thành công', '');
                        $(".modal").modal();
                        $("body").css("overflow", "");
                        $("#addDiplomaEmp").load('@Url.Action("AddDiplomaEmployee")');
                    },
                    error: function () {
                        errorAlert('Lỗi', 'Thử lại');
                    }
                })
            }
            return false;
        }


        $("#searchEmpBtn").click(function () {

            var maPhongBanTxt = $("#maPhongBanTxt").val();
            var tenPhongBanTxt = $("#tenPhongBanTxt").val();
            var loaiTxt = $("#loaiTxt").val();

            var stringArrayEmpSearch = new Array();
            stringArrayEmpSearch[0] = maPhongBanTxt.replace(/\s+/g, " ").trim();
            stringArrayEmpSearch[1] = tenPhongBanTxt.replace(/\s+/g, " ").trim();
            stringArrayEmpSearch[2] = loaiTxt.replace(/\s+/g, " ").trim();

            dataTableDepartment.ajax.url('@Url.Action("searchDepartment", "Department")?DepartmentSearchList=' + stringArrayEmpSearch).load(() => {

                $("#pre-load").hide("slow", function () { })
                $.notify("Tìm kiếm thành công", {
                    globalPosition: "top center",
                    className: "success"
                })
            }, true)
        });
    </script>

}



