      				   });
      				  $("#pre-load").css("z-index", "99999");
			          ////////////////////////////////////////////////////////////////////////
                })
                .DataTable({
                "ajax": {
                    "url": "/phong-tcld/quan-ly-nhan-vien/danh-sach-nhan-vien",
                    "type": "POST",
                    "datatype": "json",
                    //'data': function (d) {
                    //    //console.log(d.order);
                    //    return JSON.stringify( d );
                    //  }
                },
                "columns": [
                    {
                        "data": "MaNV", "name": "MaNV", "render": function (data) {
