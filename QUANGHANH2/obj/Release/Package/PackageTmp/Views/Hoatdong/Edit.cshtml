<script>
    $(document).ready(function () {
        onload(alert($("#date_import").val()));
        $("#import_fix").val($("#date_import").val())
        $("#save").click(function () {
            var temp = $("#import_fix").val();
            var arr = temp.split("/");
            $('#date_import').val(arr[1] + "/" + arr[0] + "/" + arr[2])
        });


</script>

